            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/table_border"/>

        </TableRow>

        <TableRow
            android:background="@drawable/table_border"
            android:padding="5dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/table_border"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/table_border"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/table_border"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/table_border"/>

        </TableRow>

        <TableRow
            android:background="@drawable/table_border"
            android:padding="5dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/table_border"/>

            <TextView
                android:layout_width="50dp"
